<div id ='login-form'>
<% form_for @user_session do |form|%>
	<%= form.error_messages %>
	<ol class='login-form'>
		<li>
			<%= form.label :username, "Username"%>
			<%= form.text_field :username%>
		</li>
		<li>
			<%= form.label :password, "Password"%>
			<%= form.password_field :password%>
		</li>
		<li>
			<%= form.submit "Submit", :id => 'login-submit' %>
		</li>
	</ol>
<% end %>
</div>